{
  "version": "0.1.0",
  "license": "ISC",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format cjs,esm,umd",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "start:storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook"
  },
  "peerDependencies": {
    "vue": ">=2.6 || 3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "name": "firmament",
  "author": "Jeff",
  "module": "dist/firmament.esm.js",
  "size-limit": [
    {
      "path": "dist/firmament.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/firmament.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@changesets/changelog-github": "0.2.7",
    "@changesets/cli": "2.12.x",
    "@size-limit/preset-small-lib": "4.9.x",
    "@storybook/addon-essentials": "6.1.x",
    "@storybook/addon-links": "6.1.x",
    "@storybook/vue": "6.1.x",
    "@typescript-eslint/eslint-plugin": "4.12.x",
    "@typescript-eslint/parser": "4.12.x",
    "@vue/cli-plugin-typescript": "4.5.x",
    "@vue/cli-plugin-unit-jest": "4.5.x",
    "@vue/compiler-sfc": "3.0.x",
    "@vue/eslint-config-prettier": "6.0.x",
    "@vue/eslint-config-typescript": "7.0.x",
    "@vue/test-utils": "2.0.0-beta.10",
    "@zazen/eslint-config": "2.1.x",
    "@zazen/stylelint-config": "1.0.x",
    "eslint": "7.17.x",
    "eslint-plugin-vue": "7.4.x",
    "husky": "4.3.x",
    "import-sort-style-python": "1.0.x",
    "lint-staged": "10.5.x",
    "prettier": "2.2.x",
    "prettier-plugin-import-sort": "0.0.6",
    "prettier-plugin-packagejson": "2.2.x",
    "rollup-plugin-vue": "6.0.x",
    "size-limit": "4.9.x",
    "stylelint": "13.8.x",
    "tsdx": "0.14.1",
    "tslib": "2.1.x",
    "typescript": "4.1.x",
    "vue": "3.0.4"
  },
  "importSort": {
    ".js,.ts,.vue": {
      "parser": "babylon",
      "style": "python",
      "options": {
        "knownFramework": [
          "@vue"
        ],
        "knownFirstparty": [
          "~"
        ]
      }
    }
  }
}
